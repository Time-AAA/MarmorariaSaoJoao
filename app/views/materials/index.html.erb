<p id="notice"><%= notice %></p>

<h1>Materials</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Valor</th>
      <th>Tipo</th>
      <th>Cor</th>
      <th>Origem</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @materials.each do |material| %>
      <tr>
        <td><%= material.nome %></td>
        <td>R$ <%= material.valor %></td>
        <td><%= material.tipo %></td>
        <td><%= material.cor %></td>
        <td><%= material.origem %></td>
        <td><%= link_to 'Ver', material %></td>
        <td><%= link_to 'Editar', edit_material_path(material), id: "editar-#{material.nome}" %></td>
        <td><%= link_to 'Apagar', material, method: :delete, data: { confirm: 'Are you sure?' }, id: "delete-#{material.nome}" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo material', new_material_path %>
<%= link_to 'Voltar', root_path  %>
